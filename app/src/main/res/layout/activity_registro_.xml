<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Registro_Activity">

    <FrameLayout
        android:id="@+id/frameLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="185dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:contentDescription="@string/imagen_usuario"
            tools:srcCompat="@tools:sample/avatars" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView5"
        style="@style/titulos"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/rfc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout5" />

    <EditText
        android:id="@+id/textRfc"
        style="@style/cajasTexto"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:hint="@string/ingrese_su_rfc"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout5"
        tools:targetApi="o" />

    <ImageButton
        android:id="@+id/btnBuscar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/buscador_curp"
        app:layout_constraintStart_toEndOf="@+id/textRfc"
        app:srcCompat="@android:drawable/ic_menu_search"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/textNombre"
        style="@style/titulos"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="@string/nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textPaterno"
        style="@style/titulos"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/apellido_paterno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNombre" />

    <TextView
        android:id="@+id/textMaterno"
        style="@style/titulos"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/apellido_materno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPaterno" />

    <TextView
        android:id="@+id/tv_nombre"
        style="@style/texto"
        android:layout_width="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toEndOf="@+id/textNombre"
        app:layout_constraintTop_toBottomOf="@+id/textRfc" />

    <TextView
        android:id="@+id/tv_ap"
        style="@style/texto"
        android:layout_width="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toEndOf="@+id/textPaterno"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre" />

    <TextView
        android:id="@+id/tv_am"
        style="@style/texto"
        android:layout_width="200dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/textMaterno"
        app:layout_constraintTop_toBottomOf="@+id/tv_ap" />

    <TextView
        android:id="@+id/textView7"
        style="@style/titulos"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:text="@string/contrase_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMaterno" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtContraseña"
        style="@style/cajasTexto"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:hint="@string/ingrese_su_contrase_a"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tv_am" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/txtContraseña">

        <Button
            android:id="@+id/btn_registrarse"
            style="@style/style_boton_confirmar"
            android:layout_gravity="center"
            android:text="@string/registrarse" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>