<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Login_Activity">


    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:contentDescription="@string/imagen_inicio"
            app:srcCompat="@drawable/icono_permisos" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView10"
        style="@style/titulos"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/rfc"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txt_curp"
        style="@style/cajasTexto"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:hint="@string/ingrese_su_rfc"
        android:inputType=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:ignore="MissingConstraints"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/textView11"
        style="@style/titulos"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/contrase_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_curp" />

    <EditText
        android:id="@+id/txt_contraseña"
        style="@style/cajasTexto"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:hint="@string/ingrese_su_contrase_a"
        android:importantForAutofill="no"
        android:inputType=""
        android:labelFor="@id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="MissingConstraints" tools:targetApi="o" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_contraseña">

        <Button
            android:id="@+id/btn_iniciarsesion"
            style="@style/style_boton_confirmar"
            android:layout_gravity="center"
            android:text="@string/iniciar_sesion" />
    </FrameLayout>

    <TextView
        android:id="@+id/btn_registrar"
        style="@style/texto"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:text="@string/registrarse"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>